{
    "compilerOptions": {
        "module": "UMD",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "moduleResolution": "node",
        "lib": [
            "es6"
        ],
        "esModuleInterop": false,
        "outDir": "dist"
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
}